<Window x:Class="EasyDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyDraw" Height="626" Width="979" Background="#FFACACAC" Icon="drawicon.ico">
    <Window.Resources>
        <ContextMenu x:Key="MyContextMenu">
            <MenuItem Header="Send" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <InkCanvas x:Name="inkCanvas" Margin="3,3,3,38"/>
        <Button x:Name="ClearButton" Content="Clear" Margin="836,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ClearButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="901,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ExitButton_Click"/>
        <Button x:Name="LoadButton" Content="Load" Margin="706,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="LoadButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" Margin="641,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="SaveButton_Click"/>
        <ComboBox x:Name="comboBox" Margin="530,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="106" SelectionChanged="comboBox_SelectionChanged" SelectedIndex="0">
            <ComboBoxItem Name="penMode">Pen</ComboBoxItem>
            <ComboBoxItem Name="eraseMode">Eraser</ComboBoxItem>
            <ComboBoxItem Name="selectMode">Select</ComboBoxItem>
            <ComboBoxItem Name="seraseMode">Stroke Eraser</ComboBoxItem>
        </ComboBox>
        <Button x:Name="ColorButton" Content="Pen Color" Margin="465,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ColorButton_Click"/>
        <Button x:Name="ExportButton" Content="Export" Margin="771,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ExportButton_Click"/>
        <Slider x:Name="brushSize" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,15" Width="422" Minimum="1" ValueChanged="brushSize_ValueChanged" Maximum="10"/>
        <Canvas x:Name="sizeShow" HorizontalAlignment="Left" Height="30" Margin="430,562,0,0" VerticalAlignment="Top" Width="30"/>
    </Grid>
</Window>
