<Window x:Class="EasyDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyDraw" Height="626" Width="917" Background="#FFACACAC">
    <Window.Resources>
        <ContextMenu x:Key="MyContextMenu">
            <MenuItem Header="Send" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <InkCanvas x:Name="inkCanvas" Margin="3,3,3,38"/>
        <Button x:Name="ClearButton" Content="Clear" Margin="774,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ClearButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" Margin="839,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ExitButton_Click"/>
        <Button x:Name="LoadButton" Content="Load" Margin="709,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="LoadButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" Margin="644,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="SaveButton_Click"/>
        <ComboBox x:Name="comboBox" Margin="533,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="106" SelectionChanged="comboBox_SelectionChanged" SelectedIndex="0">
            <ComboBoxItem Name="penMode">Pen</ComboBoxItem>
            <ComboBoxItem Name="eraseMode">Eraser</ComboBoxItem>
            <ComboBoxItem Name="selectMode">Select</ComboBoxItem>
            <ComboBoxItem Name="seraseMode">Stroke Eraser</ComboBoxItem>
        </ComboBox>
        <Button x:Name="ColorButton" Content="Pen Color" Margin="468,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ColorButton_Click"/>
        <Button x:Name="ExportButton" Content="Export" Margin="403,0,0,3" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="60" Click="ExportButton_Click"/>
        <Slider x:Name="brushSize" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,15" Width="395" Minimum="1" ValueChanged="brushSize_ValueChanged" Maximum="10"/>
    </Grid>
</Window>
