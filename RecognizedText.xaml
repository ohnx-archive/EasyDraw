<Window x:Class="EasyDraw.RecognizedText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recognized Text" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="recogText" Grid.Row="0" AcceptsReturn="True" />
        <Button x:Name="doneBtn" Content="Done" Grid.Row="1" Click="doneBtn_Click" />
    </Grid>
</Window>
